<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

    </style>


    <style name="Theme.MyAwesomeApp.Orange" parent="AppTheme">
        <item name="colorPrimary">@color/orange</item>
    </style>

    <style name="Theme.MyAwesomeApp.Pink" parent="AppTheme">
        <item name="colorPrimary">@color/pink</item>
    </style>
    <style name="Theme.MyAwesomeApp.Blue" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>


    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:windowActionBarOverlay">true</item>
    <!-- Support library compatibility -->
    <item name="windowActionBarOverlay">true</item>
    </style>



    <!-- Other Themes -->

    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="noActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="noActionBarThem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="inputEditTextStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="navigationTheme"/>

    <style name="headerStyleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>